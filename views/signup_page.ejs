<!-- Wappler include head-page="layouts/LandingTemplate" is="dmx-app" id="signup_page" appConnect="local" fontawesome_5="cdn" bootstrap5="local" bootstrap_icons="cdn" components="{dmxFormatter:{},dmxAnimateCSS:{},dmxValidator:{}}" -->
<dmx-value id="Signup_toggle" dmx-bind:value="'Sign up'"></dmx-value>
<section class="Signuplogin-section">
    <div class="container bg-white signupform-holder text-dark">
        <div class="row text-muted">
            <div class="col-5 rounded-pill bg-info style6">
                <div class="row pt-1 pb-1 action-btn-holder">
                    <div class="col pt-0">
                        <p class="style4 text-center rounded-pill" dmx-class:bg-white="(content.Signup_toggle.value == 'Sign up')" dmx-on:click="Signup_toggle.setValue('Sign up')" style="cursor: pointer;">Sign up</p>


                    </div>
                    <div class="col">
                        <p class="style4 text-center rounded-pill" dmx-on:click="Signup_toggle.setValue('Login')" dmx-class:bg-white="(content.Signup_toggle.value == 'Login')" style="cursor: pointer;">Login</p>
                    </div>
                </div>
            </div>
            <div class="style7 col-8" is="dmx-if" id="Login_box" dmx-bind:condition="(Signup_toggle.value == 'Login')" dmx-animate-inview:10.duration:2000="fadeIn">
                <form id="Login_form" class="style8" is="dmx-serverconnect-form" method="post" action="/api/Users/login" dmx-on:success="browser.goto('/App')">
                    <div class="d-flex w-100">
                        <div class="mb-3 me-3 form-group">
                            <label for="login_email" class="form-label">Email</label>
                            <input type="text" class="form-control" id="login_email" name="Email" aria-describedby="input1_help">
                        </div>
                        <div class="mb-3 form-group" is="dmx-input-group">
                            <label for="login_password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="login_password" name="Pasword" aria-describedby="input1_help">
                        </div>
                    </div>


                    <p class="text-muted">Forgot password?</p>
                    <button id="btn1" class="btn btn-info fw-bold btn-lg mt-3 ms-auto me-auto" type="submit">Login</button>
                    <div class="mb-3">

                    </div>
                </form>
            </div>
            <div class="bg-white style10 col-8" is="dmx-if" id="Signup_box" dmx-bind:condition="(Signup_toggle.value == 'Sign up')" dmx-animate-inview:10.duration:2000="fadeIn">
                <form id="Signup_form" class="style8" is="dmx-serverconnect-form" method="post" action="/api/Users/Create_user" dmx-on:success="toasts.show({message: 'Your account is created!', title: 'Success'});Signup_box.Signup_form.reset();browser.goto('/App')">
                    <div class="d-flex w-100">
                        <div class="mb-3 me-3 form-group">
                            <label for="signup_LastName" class="form-label col-form-label">First name</label>
                            <input type="text" class="form-control" id="signup_FirstName" name="FirstName" aria-describedby="input1_help" required="">
                        </div>
                        <div class="mb-3 form-group" is="dmx-input-group">
                            <label for="signup_LastName" class="form-label col-form-label">Last name</label>
                            <input type="text" class="form-control" id="signup_LastName" name="LastName" aria-describedby="input1_help" required="">
                        </div>
                    </div>
                    <div class="d-flex w-100">

                        <div class="mb-3 me-3 form-group">
                            <label for="signup_Email" class="form-label col-form-label">Email</label>
                            <input type="text" class="form-control" id="signup_Email" name="Email" aria-describedby="input1_help" required="">
                        </div>
                        <div class="mb-3 form-group" is="dmx-input-group">
                            <label for="signup_Email" class="form-label col-form-label">Company name</label>
                            <input type="text" class="form-control" id="CompanyName" name="CompanyName" aria-describedby="input1_help" required="">
                        </div>
                    </div>
                    <div class="d-flex w-100">

                        <div class="mb-3 me-3 form-group col-12 w-100">
                            <label for="signup_Email1" class="form-label col-form-label">Company email address</label>
                            <input type="text" class="form-control" id="signup_Email1" name="company_email" aria-describedby="input1_help" required="">
                        </div>
                    </div>
                    <div class="d-flex w-100">
                        <div class="mb-6 me-3 form-group">
                            <label for="signup_Password1" class="form-label col-form-label">Password</label>
                            <input type="password" class="form-control" id="signup_Password1" name="Pasword" aria-describedby="input1_help" required="">
                        </div>
                        <div class="mb-3 form-group" is="dmx-input-group">
                            <label for="signup_Password1" class="form-label col-form-label">Confirm password</label>
                            <input type="password" class="form-control" id="signup_Password2" name="Confirm_Pasword" aria-describedby="input1_help" data-rule-equalto="Pasword" required="">
                        </div>
                    </div>


                    <button id="btn2" class="btn fw-bold btn-lg mt-3 ms-auto me-auto btn-primary" type="submit">Sign up</button>
                    <div class="mb-3">

                    </div>
                </form>
            </div>
        </div>
    </div>

</section>

<meta name="ac:route" content="/">